        <div class="reviews-list">
          <h2>your drones' reviews</h2>
          <div class="review-content">
            <div class="review-row">
                <% current_user.drones.each do |drone| %>
                <div class="a-review">
                  <h4 class="reviewed-drone"><%= drone.title %></h4>

                    <% drone.reviews.each do |rev| %>
                      <p class="review-description"><%= rev.description %></p>
                    <% end %>

                </div>
                <% end %>

            </div>
          </div>
        </div>
    </div>
