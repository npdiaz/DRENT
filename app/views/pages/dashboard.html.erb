<div class="container-dashboard">
  <div class="title-dashboard" >
    <h1> Welcome on your profile <%= current_user.first_name %> </h1>
  </div>
  <div class="dashboard-profile">
    <div class="profile-picture">
      <%= image_tag "avatar.jpg", class: "avatar-xtralarge" %>
    </div>
    <div class="user-information">
      <p> <%= current_user.first_name %>  <%= current_user.last_name %></p>
      <p> email: <%= current_user.email %> Tel: <%= current_user.telephone%></p>
      <p> <%= current_user.birth_date %>  <%= current_user.country_id %></p>
    </div>
    <div class="edit-btn">
      <%= link_to "Edit profile", dashboard_path, class: "btn btn-green" %>
    </div>
  </div>
</div>

<div class="booking-dashboard2">
