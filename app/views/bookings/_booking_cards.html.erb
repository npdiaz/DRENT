<div class="container">

  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-xs-12 col-sm-6 col-md-4 card" >

          <%= image_tag "drone1.jpg", alt: "drone" %>

          <div class="card-infos">
            <div>
              <p class="card-booking"><%= booking.drone.title %></p>
              <p> Rental from <%=  booking.rent_start_date.strftime("%m/%d/%Y") %> To <%= booking.rent_end_date.strftime("%m/%d/%Y") %></p>
              <p> Total cost <%= booking.total_price %> EUR </p>
               <!-- would like to add diifferent -->
              <p> status : <%= booking.status %></p>
              <!-- stars -->

              <% if booking.reviews.empty?  %>
              <%= link_to "Create a review", new_booking_review_path(booking), class: "btn btn-green" %>
              <% end %>
              </div>


          </div>
      </div>
    <% end %>
  </div>
</div>
