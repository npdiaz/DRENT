<div class="container">
<%= simple_form_for(@drone) do |f| %>
  <%= f.error_notification %>

  <div class = "form-group">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :brand %>
    <%= f.input :model %>
    <%= f.input :size %>
    <%= f.input :weight %>
    <%= f.input :endurance %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :country, as: :text %>
    <%= f.input :price %>
    <%= f.simple_fields_for :photos do |p| %>
        <%= p.input :photo, as: :file %>
      <% end %>
  </div>

  <div clas = "form-action">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
</div>

<% end %>
