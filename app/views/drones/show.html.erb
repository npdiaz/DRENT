<div class="container-show-drone">
  <div class="container-show-drone__specs">
    <h2> <%= @drone.title %> </h2>
    <table>
      <tr>
        <td>Make/Model: </td>
        <td><%= @drone.brand %> <%= @drone.model %></td>
      </tr>
      <tr>
        <td>Size: </td>
        <td><%= @drone.size %></td>
      </tr>
      <tr>
        <td>Weight: </td>
        <td> <%= @drone.weight %></td>
      </tr>             <tr>
        <td>Endurance: </td>
        <td> <%= @drone.endurance %></td>
      </tr>
    </table>
  </div>

  <div>
    <div class="container-show-drone__image" style="background-image: url('<%= cl_image_path(@drone.photos.first&.photo&.url) %>')">
    </div>
    <div>
      <p> <%= @drone.price %> EUR /per day </p>
      <p> Available in <%= @drone.city %> <%= @drone.country %>
      </p>
      <p><%= @drone.address %></p>
      <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
        Rent me!
      </button>
    </div>
  </div>

  </div>
    <%= link_to "Edit drone", edit_drone_path(@drone), class: "btn btn-primary btn-sm" %>

    <%= link_to "Delete drone", drone_path(@drone), method: :delete, class: "btn btn-warning btn-sm" %>
    <%= link_to "Add picture", new_drone_photo_path(@drone), class: "btn btn-primary btn-sm" %>

  <div class="content-photos">
    <h5> Other photos: </h5>
    <% if !@drone.photos.empty? %>
      <% @drone.photos.each_with_index do |photo,i| %>
      <% next if i == 0 %>
       <%= cl_image_tag(photo.photo.url, :width => 200, :height => 250, :crop => :fill) %>
      <% end %>
    <% end %>
  </div>

    <br/>
    <br/>
  <!--   <button type="button" class="fas fas fa-trash-alt"></button> -->

  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel"></h4>
          </div>
          <div class="modal-body">
            <%= render 'bookings/form' %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



